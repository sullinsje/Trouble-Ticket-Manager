@model IEnumerable<Trouble_Ticket_Manager.Models.Entities.Computer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceTag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnderWarranty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceTag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnderWarranty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    <a asp-controller="Computer" asp-action="Edit" asp-route-assetTag="@item.AssetTag">
                        Edit
                    </a> |
                    <a asp-controller="Computer" asp-action="Details" asp-route-assetTag="@item.AssetTag">
                        Details
                    </a> |
                    <a asp-controller="Computer" asp-action="Delete" asp-route-assetTag="@item.AssetTag">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>